
def options(opt):
    opt.load('compiler_fc')
    opt.load('compiler_c')
    opt.load('m4fpp')


def configure(conf):
    conf.load('compiler_fc')
    conf.load('compiler_c')
    conf.load('m4fpp')


def build(bld):
    libsources = bld.path.ant_glob('fortyxima.F90')
    libsources += bld.path.ant_glob(['filesys/*.F90', 'filesys/*.c'])
    bld(
        features="m4fpp c fc fcstlib",
        source=libsources,
        target="fortyxima"
    )
